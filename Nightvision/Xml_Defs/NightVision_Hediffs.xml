<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef ParentName="AddedBodyPartBase">
    <defName>NV_TapetumPart</defName>
    <!-- Tapetum Lucidum officially -->
    <label>implanted retinal retro-reflector</label>
    <labelNoun>a retinal retro-reflector implant</labelNoun>
    <comps>
      <li Class="NightVision.HediffCompProperties_NightVision">
        <grantsPhotosensitivity>true</grantsPhotosensitivity>
      </li>
    </comps>
    <addedPartProps>
      <isSolid>true</isSolid>
      <partEfficiency>1</partEfficiency>
    </addedPartProps>
  </HediffDef>

  <RecipeDef ParentName="SurgeryFlesh">
    <defName>NV_TapetumRecipe</defName>
    <label>implant tapetum lucidum</label>
    <description>Implant a natural retinal retro-reflector</description>
    <workerClass>Recipe_InstallArtificialBodyPart</workerClass>
    <jobString>Stripping Retina</jobString>
    <workAmount>4500</workAmount>
    <surgerySuccessChanceFactor>0.75</surgerySuccessChanceFactor>
    <deathOnFailedSurgeryChance>0.3</deathOnFailedSurgeryChance>
    <skillRequirements>
      <Medicine>9</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Eye</li>
    </appliedOnFixedBodyParts>
    <addsHediff>NV_TapetumPart</addsHediff>
  </RecipeDef>
</Defs>