<?xml version="1.0" encoding="utf-8"?>

<Defs>
  <!--- Just for display -->
  <StatDef>
    <defName>NightVision</defName>
    <workerClass>NightVision.StatWorker_NightVision</workerClass>
    <label>darkness multiplier</label>
    <description>
      The work speed and move speed multipliers in darkness ( &lt; 30% light ).
      Reaches the peak value listed here at 0% light.
    </description>
    <category>BasicsPawn</category>
    <defaultBaseValue>0.8</defaultBaseValue>
    <minValue>0.01</minValue>
    <toStringStyle>PercentZero</toStringStyle>
    <showOnAnimals>false</showOnAnimals>
    <showOnMechanoids>false</showOnMechanoids>
    <displayPriorityInCategory>10</displayPriorityInCategory>
  </StatDef>

  <StatDef>
    <defName>LightSensitivity</defName>
    <workerClass>NightVision.StatWorker_LightSensitivity</workerClass>
    <label>bright light multiplier</label>
    <description>
      The work speed and move speed multipliers in bright light ( &gt; 70% light ).
      Reaches the peak value listed here at 100% light.
      </description>
    <category>BasicsPawn</category>
    <defaultBaseValue>1</defaultBaseValue>
    <minValue>0.01</minValue>
    <toStringStyle>PercentZero</toStringStyle>
    <showOnAnimals>false</showOnAnimals>
    <showOnMechanoids>false</showOnMechanoids>
    <displayPriorityInCategory>10</displayPriorityInCategory>
  </StatDef>

</Defs>