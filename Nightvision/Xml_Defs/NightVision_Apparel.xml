  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>advNV</defName>
    <label>advanced night vision helmet</label>
    <description>A modified power armour helmet with night vision capabilities and UV protection.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>9</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/nvgogglesv2_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <WorkToMake>20000</WorkToMake>
      <MaxHitPoints>140</MaxHitPoints>
      <Mass>2.9</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>0.9</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.32</ArmorRating_Blunt>
      <ArmorRating_Heat>0.9</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>4</EquipDelay>
    </statBases>
    <costList>
      <ComponentSpacer>2</ComponentSpacer>
      <Plasteel>30</Plasteel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/nvgogglesv2</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>SpacerMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <colorGenerator Class="ColorGenerator_White">
    </colorGenerator>

    <comps>
      <li Class = "NightVision.Comps.CompProperties_NightVisionApparel">
        <NullifiesPhotosensitivity>true</NullifiesPhotosensitivity>
        <GrantsNightVision>true</GrantsNightVision>
      </li>
    </comps>
  </ThingDef>

</Defs>