      </defaultOutfitTags>
    </apparel>
    <comps>
      <li Class = "NightVision.CompProperties_NightVisionApparel">
        <nullifiesPhotosensitivity>true</nullifiesPhotosensitivity>
      </li>
    </comps>

  </ThingDef>
  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>advNVgear</defName>
    <label>advanced night vision gear</label>
    <description>You beat photons!</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/nvgogglesv2_front</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <MaxHitPoints>160</MaxHitPoints>
      <Mass>2.7</Mass>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
      <ArmorRating_Heat>0.5</ArmorRating_Heat>
      <ArmorRating_Electric>0</ArmorRating_Electric>
