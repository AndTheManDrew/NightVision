<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="HatMakeableBase">
    <defName>NightVision_Goggles</defName>
    <label>nightvision goggles</label>
    <description>A pair of nightvision goggles, with a variety of adjustable straps to ensure they cover the eyes, rather than the mouth.</description>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <researchPrerequisite>MicroelectronicsBasics</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>NightVision_Goggles</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costList>
      <Component>10</Component>
    </costList>
    <costStuffCount>15</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>0.5</Mass>
      <ArmorRating_Blunt>0.06</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.08</ArmorRating_Sharp>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.05</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
        <li>Eyes</li>
      </bodyPartGroups>
      <wornGraphicPath>NightVision_Goggles</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Military</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <comps>
      <li Class = "NightVision.CompProperties_NightVisionApparel">
          <grantsNightVision>true</grantsNightVision>
      </li>
    </comps>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.9,0.54,0.15,1)</only>
        </li>
        <li>
          <weight>15</weight>
          <only>RGBA(0.9,0.6,0.18,1)</only>
        </li>
        <li>
          <weight>20</weight>
          <only>RGBA(0.9,0.42,0.23,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
</Defs>