    </graphicData>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>0.5</Mass>
      <ArmorRating_Blunt>0.06</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.08</ArmorRating_Sharp>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.04</MoveSpeed>
    </equippedStatOffsets>
    <costList>
      <Component>2</Component>
