<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="HatMakeableBase">
    <defName>simpleNVGoggles</defName>
    <label>night vision goggles</label>
    <description>A pair of nightvision goggles, with a variety of adjustable straps to ensure they cover the eyes, rather than the mouth.</description>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <researchPrerequisite>MicroelectronicsBasics</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/nvgogglesv1_front</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <!-- <shaderType>CutoutComplex</shaderType> -->
    </graphicData>
    <costList>
      <Component>10</Component>
    </costList>
    <costStuffCount>15</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>1</Mass>
      <ArmorRating_Blunt>0.06</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.08</ArmorRating_Sharp>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.05</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Eyes</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/nvgogglesv1</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Military</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <comps>
      <li Class = "NightVision.CompProperties_NightVisionApparel">
          <grantsNightVision>true</grantsNightVision>
      </li>
    </comps>
  </ThingDef>
