<?xml version="1.0" encoding="utf-8"?>

<Defs>
  <!--- Just for display -->
  <StatDef>
    <defName>NightVision</defName>
    <workerClass>NightVision.NVStatWorker_NightVision</workerClass>
    <label>night vision</label>
    <description>The work speed and move speed multipliers in darkness ( &lt; 30% light ).
      Reaches the peak value listed here at 0% light.</description>
    <category>BasicsPawn</category>
    <defaultBaseValue>0.8</defaultBaseValue>
    <minValue>0.01</minValue>
    <toStringStyle>PercentOne</toStringStyle>
    <formatString>x{0:0.0%}</formatString>
    <showOnAnimals>false</showOnAnimals>
    <showOnMechanoids>false</showOnMechanoids>
    <displayPriorityInCategory>10</displayPriorityInCategory>
  </StatDef>

  <StatDef>
    <defName>LightSensitivity</defName>
    <workerClass>NightVision.NVStatWorker_LightSensitivity</workerClass>
    <label>photosensitivity</label>
    <description>The work speed and move speed multipliers in bright light ( &gt; 70% light ).
      Reaches the peak value listed here at 100% light.</description>
    <category>BasicsPawn</category>
    <defaultBaseValue>1</defaultBaseValue>
    <minValue>0.01</minValue>
    <toStringStyle>PercentOne</toStringStyle>
    <formatString>x{0:0%}</formatString>
    <showOnAnimals>false</showOnAnimals>
    <displayPriorityInCategory>10</displayPriorityInCategory>
  </StatDef>

  <StatDef>
    <defName>NVRangedCooldown</defName>
    <workerClass>NightVision.NVStatWorker_RangedCooldown</workerClass>
    <label>ranged cooldown</label>
    <description>The ranged cooldown multiplier due to light. Affected by shooting skill.</description>
    <category>PawnCombat</category>
    <defaultBaseValue>1</defaultBaseValue>
    <minValue>0.01</minValue>
    <toStringStyle>PercentOne</toStringStyle>
    <formatString>x{0:0%}</formatString>
    <showOnAnimals>false</showOnAnimals>
    <displayPriorityInCategory>100</displayPriorityInCategory>
  </StatDef>

</Defs>