<?xml version="1.0" encoding="utf-8"?>

<Defs>

  <ThingDef ParentName="HatMakeableBase">
    <defName>NV_nv_goggles</defName>
    <label>night vision goggles</label>
    <description>A pair of nightvision goggles with an adjustable strap to ensure they cover the eyes, not the mouth.</description>
    <techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>Apparel/nvgogglesv1</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <!-- <shaderType>CutoutComplex</shaderType> -->
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <costList>
      <ComponentIndustrial>3</ComponentIndustrial>
      <Plasteel>10</Plasteel>
    </costList>
    <generateCommonality>0.2</generateCommonality>
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>1</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.05</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Eyes</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/nvgogglesv1</wornGraphicPath>
      <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <researchPrerequisite>MicroelectronicsBasics</researchPrerequisite>
    </recipeMaker>
    <comps>
      <li Class="NightVision.CompProperties_NightVisionApparel">
        <GrantsNightVision>true</GrantsNightVision>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="HatMakeableBase">
    <defName>NV_tinted_goggles</defName>
    <label>tinted goggles</label>
    <description>Provide excellent protection from any light brighter than 70 rw candela. Certified by all popular joywire artists. May inflate ego.</description>
    <techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>Apparel/tintedgoggles</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <!-- <shaderType>CutoutComplex</shaderType> -->
    </graphicData>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>25</costStuffCount>
    <costList>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <generateCommonality>0.5</generateCommonality>
    <statBases>
      <WorkToMake>2000</WorkToMake>
      <MaxHitPoints>90</MaxHitPoints>
      <Mass>1</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.05</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Eyes</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/tintedgoggles</wornGraphicPath>
      <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <comps>
      <li Class="NightVision.CompProperties_NightVisionApparel">
        <NullifiesPhotosensitivity>true</NullifiesPhotosensitivity>
      </li>
    </comps>

    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65,1)</only>
        </li>
        <!--        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3,1)</min>
          <max>(0.5,0.5,0.5,1)</max>
        </li> -->
        <li>
          <weight>10</weight>
          <only>(0.9,0.9,0.9,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>


  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>NV_adv_helmet</defName>
    <label>advanced night vision helmet</label>
    <description>Based on the standard power armour helmet but with some of the armour plating replaced by a visor that both augments the wearer's night vision and provides dynamic tinting in bright light.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>9</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/nvgogglesv2</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <generateCommonality>0.5</generateCommonality>
    <statBases>
      <WorkToMake>22000</WorkToMake>
      <MaxHitPoints>140</MaxHitPoints>
      <Mass>2.9</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>0.9</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.30</ArmorRating_Blunt>
      <ArmorRating_Heat>0.75</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>3.5</EquipDelay>
    </statBases>
    <costList>
      <ComponentSpacer>2</ComponentSpacer>
      <Plasteel>30</Plasteel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/nvgogglesv2</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>SpacerMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65,1)</only>
        </li>
        <!--        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3,1)</min>
          <max>(0.5,0.5,0.5,1)</max>
        </li> -->
        <li>
          <weight>10</weight>
          <only>(0.9,0.9,0.9,1)</only>
        </li>
      </options>
    </colorGenerator>
    <comps>
      <li Class="NightVision.CompProperties_NightVisionApparel">
        <NullifiesPhotosensitivity>true</NullifiesPhotosensitivity>
        <GrantsNightVision>true</GrantsNightVision>
      </li>
    </comps>
  </ThingDef>

</Defs>